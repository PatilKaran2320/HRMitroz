@model Country.Models.CountryAll

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-6">
        <h1>Create Country</h1>
    </div>
    <div class="col-6 text-end">
        <button class="btn btn-dark">
            <a asp-action="Index">Back to List</a>
        </button>
    </div>
</div>
<hr />
<div class="col-12">
    <div class="col-3">

    </div>
    <div class="col-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Population" class="control-label"></label>
                <input asp-for="Population" class="form-control" />
                <span asp-validation-for="Population" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NationalLangauge" class="control-label"></label>
                <input asp-for="NationalLangauge" class="form-control" />
                <span asp-validation-for="NationalLangauge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfStates" class="control-label"></label>
                <input asp-for="NumberOfStates" class="form-control" />
                <span asp-validation-for="NumberOfStates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Region" class="control-label"></label>
                <select asp-for="Region" class="form-control">
                    <option value="Asia">Asia</option>
                    <option value="Australia">Australia</option>
                    <option value="NorthAmerica">North America</option>
                    <option value="SouthAmerica">South America</option>
                    <option value="Afrika">Afrika</option>
                    <option value="Europe">Europe</option>
                    <option value="Antartica">Antartica</option>
                </select>
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-3">

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
